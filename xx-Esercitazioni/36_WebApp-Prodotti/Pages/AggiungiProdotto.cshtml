@page
@model AggiungiProdottoModel
@{
    ViewData["Title"] = "Aggiungi Prodotto";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group mb-3">
        <label for="nome">Nome
            <input type="text" class="form-control" name="nome" /></label>
    </div>
    <div class="form-group mb-3">
        <label for="prezzo">Prezzo
            <input type="text" class="form-control" name="prezzo" /></label>
    </div>
    <div class="form-group mb-3">
        <label for="dettaglio">Dettaglio
            <input type="text" class="form-control" name="dettaglio" /></label>
    </div>
    <div class="form-group mb-3">
        <label for="quantita">Quantita
            <input type="text" class="form-control" name="quantita" /></label>
    </div>
    <div class="form-group mb-3">
        <label for="categoria">Categoria
            <select class="form-control" name="categoria">
                <option value="">--- Seleziona Categoria ---</option>
                @foreach (var categoria in Model.Categorie)
                {
                    <option value="@categoria">@categoria</option>
                }
            </select>
        </label>
    </div>
    <div class="form-group mb-3">
        <label for="immagine">Immagine
            <input type="text" class="form-control" name="immagine" /></label>
    </div>
    <button type="submit" class="btn btn-dark">Aggiungi</button>
</form>