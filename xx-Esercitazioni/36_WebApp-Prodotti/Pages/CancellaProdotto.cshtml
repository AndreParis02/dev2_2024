@page
@model CancellaProdottoModel
@{
    ViewData["Title"] = "CancellaProdotto";
}

<h1>@ViewData["Title"]</h1>

<h2>Stai per Eliminare questo prodotto:</h2>

<div>
    <form method="post">
        <div class="form-group mb-3">
            <label for="input-text-disabled">Nome</label>
            <input type="text" class="form-control" name="nome" value="@Model.Prodotto.Nome" id="input-text-disabled" disabled />
        </div>
        <div class="form-group mb-3">
            <label for="input-text-disabled">Prezzo</label>
            <input type="text" class="form-control" name="prezzo" value="@Model.Prodotto.Prezzo" id="input-text-disabled" disabled />
        </div>
        <div class="form-group mb-3">
            <label for="input-text-disabled">Dettaglio</label>
            <input type="text" class="form-control" name="dettaglio" value="@Model.Prodotto.Dettaglio" id="input-text-disabled" disabled />
        </div>
        <div class="form-group mb-3">
            <label for="input-text-disabled">Quantita</label>
            <input type="text" class="form-control" name="quantita" value="@Model.Prodotto.Quantita" id="input-text-disabled" disabled />
        </div>
        <div class="form-group mb-3">
            <label for="input-text-disabled">Categoria</label>
            <input type="text" class="form-control" name="categoria" value="@Model.Prodotto.Categoria" id="input-text-disabled" disabled />
        </div>
         <div class="form-group mb-3">
            <label for="input-text-disabled">Data Inserimento</label>
            <input type="text" class="form-control" name="data" value="@Model.Prodotto.Data" id="input-text-disabled" disabled />
        </div>
        <div class="form-group mb-3">
            <label for="input-text-disabled">Immagine</label>
            <input type="text" class="form-control" name="immagine" value="@Model.Prodotto.Immagine" id="input-text-disabled" disabled />
        </div>
        <br>
        <button type="submit" class="btn btn-dark">Elimina</button>
    </form>
</div>