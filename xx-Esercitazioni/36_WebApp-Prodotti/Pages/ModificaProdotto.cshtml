@page
@model ModificaProdottoModel
@{
    ViewData["Title"] = "ModificaProdotto";
}

<h1>@ViewData["Title"]</h1>

<div>
    <form method="post">
        <div class="form-group ">
            <label for="nome">Nome</label>
            <input type="text" class="form-control" name="nome" value="@Model.Prodotto.Nome" />
        </div>
        <div class="form-group mb-3">
            <label for="nome">Prezzo</label>
            <input type="text" class="form-control" name="prezzo" value="@Model.Prodotto.Prezzo" />
        </div>
        <div class="form-group mb-3">
            <label for="nome">Dettaglio</label>
            <input type="text" class="form-control" name="dettaglio" value="@Model.Prodotto.Dettaglio" />
        </div>
        <div class="form-group mb-3">
            <label for="nome">Quantita</label>
            <input type="text" class="form-control" name="quantita" value="@Model.Prodotto.Quantita" />
        </div>
        <div class="form-group mb-3">
            <label for="categoria">Categoria
                <select class="form-control" name="categoria">
                    <option value="@Model.Prodotto.Categoria">@Model.Prodotto.Categoria</option>
                    @foreach (var categoria in Model.Categorie)
                    {
                        <option value="@categoria">@categoria</option>
                    }
                </select>
            </label>
        </div>
        <div class="form-group mb-3">
            <label for="fornitore">Fornitore
                <select class="form-control" name="fornitore">
                    <option value="@Model.Prodotto.NomeFornitore">@Model.Prodotto.NomeFornitore</option>
                    @foreach (var fornitore in Model.Fornitori)
                    {
                        <option value="@fornitore.Nome">@fornitore.Nome</option>
                    }
                </select>
            </label>
        </div>
        <div class="form-group mb-3">
            <label for="nome">Immagine</label>
            <input type="text" class="form-control" name="immagine" value="@Model.Prodotto.Immagine" />
        </div>
        <br>
        <button type="submit" class="btn btn-dark">Salva</button>
    </form>
</div>