    <form method="get">
        <input type="hidden" name="minPrezzo" value="@Request.Query["minPrezzo"]" />
        <input type="hidden" name="maxPrezzo" value="@Request.Query["maxPrezzo"]" />
        @for (int i = 1; i <= Model.numeroPagine; i++)
        {
            <button type="submit" class="btn btn-dark" name="pageIndex" value="@i">@i</button>
        }
    </form>
    </div>
    <div class="row">
        @foreach(var item in Model.Prodotti)
        {
            <div class="col.md-4 d-flex">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title text-dark">@item.Nome</h5>
                        <p class="card-text text-success">@item.Prezzo</p>
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-outline-secondary"><a asp-page="ProdottoDettaglio" asp-route-id="@item.Id" asp-route-nome="@item.Nome" asp-route-prezzo="@item.Prezzo" asp-route-descrizione="@item.Descrizione" asp-route-dettaglio="@item.Dettaglio" asp-route-immagine="@item.Immagine">Dettaglio</a></button>
