@page
@model CancellaFornitoreModel
@{
    ViewData["Title"] = "CancellaFornitore";
}

<h1>@ViewData["Title"]</h1>

<h2>Stai per Eliminare questo fornitore:</h2>

<div>
    <form method="post">
        <div class="form-group mb-3">
            <label for="input-text-disabled">Nome</label>
            <input type="text" class="form-control" name="nome" value="@Model.Fornitore.Nome" id="input-text-disabled" disabled />
        </div>
        <div class="form-group mb-3">
            <label for="input-text-disabled">Categoria</label>
            <input type="text" class="form-control" name="categoria" value="@Model.Fornitore.Categoria" id="input-text-disabled" disabled />
        </div>
        <br>
        <button type="submit" class="btn btn-dark">Elimina</button>
    </form>
</div>