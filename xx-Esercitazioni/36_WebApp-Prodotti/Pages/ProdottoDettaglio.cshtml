@page
@model ProdottoDettaglioModel
@{
    ViewData["Title"] = "ProdottoDettaglio";
}

<h1>@ViewData["Title"]</h1>

<div>
    <table class="table">
        <thred>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Prezzo</th>
                <th>Descrizione</th>
                <th>Immagine</th>
            </tr>
        </thred>
        <tbody>
                <tr>
                    <td>@Model.Prodotto.Id</td>
                    <td>@Model.Prodotto.Nome</td>
                    <td>@Model.Prodotto.Prezzo</td>
                    <td>@Model.Prodotto.Descrizione</td>
                    <td><img src="@Model.Prodotto.Immagine" alt="@Model.Prodotto.Nome" width="300" height="200" /></td>
                </tr>   
        </tbody>
    </table>
    <a asp-page="/Prodotti"> Torna a Prodotti</a>
</div>