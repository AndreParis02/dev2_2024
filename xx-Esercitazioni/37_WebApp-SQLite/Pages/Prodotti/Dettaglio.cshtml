@page "{id:int}"
@model DettaglioModel

@using _37_WebApp_SQLite.Pages.Prodotti;

@{
    ViewData["Title"] = "Dettaglio Prodotto";
}

<h2>Dettaglio Prodotto</h2>

<div>
    <table class="table table-bordered">
        <thred>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Prezzo</th>
                <th>Categoria</th>
                <th>Fornitore</th>
            </tr>
        </thred>
        <tbody>
            <tr>
                <td>@Model.Prodotto.Id</td>
                <td>@Model.Prodotto.Nome</td>
                <td>@Model.Prodotto.Prezzo</td>
                <td>@Model.Prodotto.CategoriaNome</td>
                <td>@Model.Prodotto.FornitoreNome</td>
            </tr>
        </tbody>
    </table>
</div>

<div>
    <a asp-page="PagedIndex" class="btn btn-secondary">Torna indietro</a>
</div>
