@page 
@model DettaglioModel

@using _37_WebApp_SQLite.Pages.Prodotti;

@{
    ViewData["Title"] = "Dettaglio Prodotto";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Prezzo</th>
            <th>Categoria</th>
        </tr>
    </thead>
    <tbody>
         <tr>
                <td>@Model.Prodotto.Id</td>
                <td>@Model.Prodotto.Nome</td>
                <td>@Model.Prodotto.Prezzo</td>
                <td>@Model.Prodotto.CategoriaNome</td>
            </tr>
    </tbody>
</table>

<a asp-page="Index" class="btn btn-secondary">Torna ai prodotti</a>