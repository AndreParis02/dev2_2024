@page
@model EliminaModel
@using _37_WebApp_SQLite.Pages.Prodotti;
@{
    ViewData["Title"] = "Elimina Prodotto";
    ViewData["ReurnUrl"] = Request.Headers["Referer"].ToString();
}
<h1>@ViewData["Title"]Elimina Prodotto</h1>

<form method="post">
    <input type="hidden" asp-for="Prodotto.Id" />

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Prezzo</th>
                <th>Categoria</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Prodotto.Id</td>
                <td>@Model.Prodotto.Nome</td>
                <td>@Model.Prodotto.Prezzo</td>
                <td>@Model.Prodotto.CategoriaNome</td>
            </tr>
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary my-3">Elimina</button>
    <a asp-page="Prodotti" class="btn btn-secondary">Annulla</a>

</form>