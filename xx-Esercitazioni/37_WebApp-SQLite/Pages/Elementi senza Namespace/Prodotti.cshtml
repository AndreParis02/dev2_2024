@page
@model ProdottiModel


@{
    ViewData["Title"] = "Prodotti";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h1>Elenco Prodotti</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Prezzo</th>
                <th>Categoria</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prodotto in Model.Prodotti)
            {
                <tr>
                    <td>@prodotto.Nome</td>
                    <td>@prodotto.Prezzo â‚¬</td>
                    <td>@prodotto.CategoriaNome</td>
                    <td><div class="btn-group mt-auto">
                        <button type="button" class="btn btn-sm btn-outline-secondary rounded-pill">
                            <a asp-page="ProdottoDettaglio" asp-route-id="@prodotto.Id">Dettaglio</a>
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-secondary rounded-pill">
                            <a asp-page="ModificaProdotto" asp-route-id="@prodotto.Id">Edit</a>
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-secondary rounded-pill">
                            <a asp-page="CancellaProdotto" asp-route-id="@prodotto.Id">Elimina</a>
                        </button>
                    </div></td>
                </tr>
            }
        </tbody>
    </table>

</div>
