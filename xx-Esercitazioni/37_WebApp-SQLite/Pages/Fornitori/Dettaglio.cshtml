@page 
@model DettaglioModel

@using _37_WebApp_SQLite.Pages.Fornitori;

@{
    ViewData["Title"] = "Dettaglio Fornitore";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
        </tr>
    </thead>
    <tbody>
         <tr>
                <td>@Model.Fornitore.Id</td>
                <td>@Model.Fornitore.Nome</td>
            </tr>
    </tbody>
</table>

<a asp-page="Index" class="btn btn-secondary">Torna ai fornitori</a>